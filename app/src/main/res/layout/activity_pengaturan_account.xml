<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/base_color"
    android:fitsSystemWindows="true"
    tools:context=".Home.PengaturanAccount.PengaturanAccountActivity">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="30dp"
            android:layout_marginLeft="30dp"
            android:background="@drawable/background_radius"
            android:padding="20dp"
            android:layout_marginTop="30dp">

            <ImageView
                android:id="@+id/imgPengaturan_Profile"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_centerHorizontal="true"
                android:background="@drawable/background_profile"
                android:src="@drawable/logo_icon" />

            <TextView
                android:id="@+id/tvPengaturan_UbahProfile"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Ubah Profil"
                android:gravity="center"
                android:textColor="#000000"
                android:layout_below="@id/imgPengaturan_Profile"
                android:textStyle="bold"
                android:textSize="24sp"/>

            <EditText
                android:id="@+id/edtPengaturan_Nama"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_below="@id/tvPengaturan_UbahProfile"
                android:background="@null"
                android:text="Nama"
                android:layout_marginRight="10dp"
                android:textAlignment="textEnd"
                android:layout_marginTop="15dp"
                android:textSize="14sp"
                android:textStyle="bold"
                android:textColor="#878686"
                android:textAllCaps="false"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Nama"
                android:gravity="left"
                android:layout_marginTop="30dp"
                android:textColor="#000000"
                android:layout_below="@id/tvPengaturan_UbahProfile"
                android:textStyle="bold"
                android:textSize="14sp"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:layout_below="@id/edtPengaturan_Nama"
                android:background="#000000"/>

            <EditText
                android:id="@+id/edtPengaturan_Username"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginRight="10dp"
                android:layout_below="@id/edtPengaturan_Nama"
                android:background="@null"
                android:text="Username"
                android:textAlignment="textEnd"
                android:textSize="14sp"
                android:textStyle="bold"
                android:textColor="#000000"
                android:textAllCaps="false" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Username"
                android:gravity="left"
                android:layout_marginTop="15dp"
                android:textColor="#000000"
                android:layout_below="@id/edtPengaturan_Nama"
                android:textStyle="bold"
                android:textSize="14sp"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:layout_below="@id/edtPengaturan_Username"
                android:background="#000000"/>

            <Spinner
                android:id="@+id/spPengaturan_Jk"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_below="@id/edtPengaturan_Username"
                android:background="@null"
                android:entries="@array/JK"
                android:textAlignment="textEnd"
                android:textStyle="bold"
                android:textAllCaps="false"
                android:layout_marginRight="10dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Jenis Kelamin"
                android:gravity="left"
                android:layout_marginTop="15dp"
                android:textColor="#000000"
                android:layout_below="@id/edtPengaturan_Username"
                android:textStyle="bold"
                android:textSize="14sp"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:layout_below="@id/spPengaturan_Jk"
                android:background="#000000"/>

            <EditText
                android:id="@+id/edtPengaturan_Telp"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_below="@id/spPengaturan_Jk"
                android:background="@null"
                android:text="Telpon"
                android:textAlignment="textEnd"
                android:textSize="14sp"
                android:textStyle="bold"
                android:textColor="#878686"
                android:textAllCaps="false"
                android:layout_marginRight="10dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Telpon"
                android:gravity="left"
                android:layout_marginTop="15dp"
                android:textColor="#000000"
                android:layout_below="@id/spPengaturan_Jk"
                android:textStyle="bold"
                android:textSize="14sp"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:layout_below="@id/edtPengaturan_Telp"
                android:background="#000000"/>

            <EditText
                android:id="@+id/edtPengaturan_Email"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_below="@id/edtPengaturan_Telp"
                android:background="@null"
                android:text="Email"
                android:textAlignment="textEnd"
                android:textSize="14sp"
                android:textStyle="bold"
                android:textColor="#878686"
                android:textAllCaps="false"
                android:layout_marginRight="10dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Email"
                android:gravity="left"
                android:layout_marginTop="15dp"
                android:textColor="#000000"
                android:layout_below="@id/edtPengaturan_Telp"
                android:textStyle="bold"
                android:textSize="14sp"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:layout_below="@id/edtPengaturan_Email"
                android:background="#000000"/>

            <EditText
                android:id="@+id/edtPengaturan_Alamat"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_below="@id/edtPengaturan_Email"
                android:background="@null"
                android:text="Alamat"
                android:textAlignment="textEnd"
                android:textSize="14sp"
                android:textStyle="bold"
                android:textColor="#878686"
                android:textAllCaps="false"
                android:layout_marginRight="10dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Alamat"
                android:gravity="left"
                android:layout_marginTop="15dp"
                android:textColor="#000000"
                android:layout_below="@id/edtPengaturan_Email"
                android:textStyle="bold"
                android:textSize="14sp"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:layout_below="@id/edtPengaturan_Alamat"
                android:background="#000000"/>

            <Button
                android:id="@+id/btnPengaturan_Simpan"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="SIMPAN"
                android:layout_below="@id/edtPengaturan_Alamat"
                android:layout_marginTop="40dp"
                android:textColor="#FFF"
                android:background="@drawable/background_profile"/>

        </RelativeLayout>
    </ScrollView>

</RelativeLayout>