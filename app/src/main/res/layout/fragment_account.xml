<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/base_color">

    <LinearLayout
        android:id="@+id/llAccount_Layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_marginTop="98dp"
        android:padding="20dp"
        android:orientation="vertical"
        android:background="@drawable/background_radius">

        <ImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@drawable/logo_icon"
            android:layout_gravity="center"
            android:background="@drawable/background_profile"/>

        <TextView
            android:id="@+id/tvAccount_nama"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/arcadeclasic"
            android:gravity="center"
            android:text="Nama"
            android:textSize="20sp"
            android:textColor="#000000"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tvAccount_username"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:fontFamily="@font/arcadeclasic"
            android:textStyle="bold"
            android:textSize="20sp"
            android:textColor="#000000"
            android:text="Username"/>

        <TextView
            android:id="@+id/tvAccount_jk"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:fontFamily="@font/arcadeclasic"
            android:text="Jenis Kelamin"
            android:textSize="20sp"
            android:textColor="#000000"
            android:textStyle="bold" />
    </LinearLayout>

    <Button
        android:id="@+id/btnAccount_info"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/tentang_kami"
        android:textSize="20sp"
        android:layout_below="@id/llAccount_Layout"
        android:layout_marginRight="30dp"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/background_radius"
        android:textAllCaps="false"
        android:fontFamily="@font/arcadeclasic"
        android:textStyle="bold"
        android:drawableTop="@drawable/info_icon"/>

    <Button
        android:id="@+id/btnAccount_setting"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/pengaturan_akun"
        android:textSize="20sp"
        android:layout_below="@id/btnAccount_info"
        android:layout_marginRight="30dp"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="10dp"
        android:fontFamily="@font/arcadeclasic"
        android:background="@drawable/background_radius"
        android:textAllCaps="false"
        android:textStyle="bold"
        android:drawableTop="@drawable/people_icon"/>



</RelativeLayout>